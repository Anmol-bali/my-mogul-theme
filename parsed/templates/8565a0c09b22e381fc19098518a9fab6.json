{
  "components/cart/gift-certificates": "{{inject 'giftCertificateInputEmpty' (lang 'cart.gift_certificates.error')}}\n\n<div data-gift-certificates>\n  <form\n    class=\"form form-gift-certificate\"\n    method=\"post\"\n    action=\"{{urls.cart}}\"\n    data-gift-certificate-form\n  >\n    <input\n      class=\"form-input\"\n      id=\"couponcode\"\n      type=\"text\"\n      name=\"certcode\"\n      placeholder=\"{{lang 'cart.gift_certificates.enter_code'}}\"\n      data-gift-certificate-input\n    >\n    <button\n      class=\"button button-secondary button-gift-certificate\"\n      type=\"submit\"\n    >\n      <span class=\"cart-button-text\">\n        {{lang 'cart.gift_certificates.submit'}}\n      </span>\n        <svg\n          class=\"cart-button-arrow\"\n          title=\"{{lang 'cart.gift_certificates.submit'}}\"\n          role=\"img\"\n        >\n          <use xlink:href=\"#icon-arrow\"></use>\n        </svg>\n    </button>\n    <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n  </form>\n</div>\n"
}
